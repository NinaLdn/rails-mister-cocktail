


<div class="container">
  <div class="row" id="cocktailslist">

    <% @cocktails.each do |cocktail| %>

        <div class="col-xs-12 col-sm-4">
          <% picture = cocktail.photo.present? ? cocktail.photo : 'https://images.pexels.com/photos/613037/pexels-photo-613037.jpeg' %>

          <div class="card" style="background-image: linear-gradient(rgba(239, 232, 232, 0.21), rgba(244, 244, 244, 0.4)), url('<%= picture %>');">

    <!--   <div class="card-category">Cocktail</div> -->
            <div class="card-description">
              <h2><%= link_to cocktail.name, cocktail_path(cocktail), class: "white-text"%></h2>
    <!--      <p>Very cool city, the best</p> -->
            </div>
          </div>
        </div>

    <%end%>

  </div>
</div>
