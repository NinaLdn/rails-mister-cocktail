<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> of <%= dose.ingredient.name %></p>
  <%= link_to " Delete dose", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>



<%= link_to "Go back to the list of cocktails", cocktails_path %>
<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %>

