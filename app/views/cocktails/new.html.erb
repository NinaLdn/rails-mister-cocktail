<div class="banner black-background">
  <div class="banner-content">
    <h1>Cocktails</h1>
    <p><%= link_to "Back to list of cocktails", cocktails_path, class: "white-text btn-medium"%></p>
 <!--    <a href="#" class="btn-medium">Write a story</a> -->

  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= simple_form_for [@cocktail] do |f| %>
        <%= f.input :name %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "add a cocktail", class: "btn btn-primary" %>
      <% end %>
      <%= link_to "Go back to the list of cocktails", cocktails_path %>
    </div>
  </div>
</div>
